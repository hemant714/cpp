#include<iostream>
using namespace std;
int prime(int f);
main()
{
int n,k=0,a[]={0},i,j,count,b,c;
cout<<"Enter a number :";
cin>>n;
for(j=1;j<=n/2;j++)
{
count=0;
  for(i=1;i<=j;i++)
   {
    if(j%i==0)
    count++;
    if(count>2)
    break;
   }
   if(count==2)
   {
       b=n-j;
      c= prime(b);
      if(c==1)
        cout<<n<<"="<<j<<"+"<<b<<endl;

   }
}
}
int prime(int f)
 {
     int k,coun=0;
    for(k=1;k<=f;k++)
    {
        if(f%k==0)
            coun++;
        if(coun>2)
            break;
    }
    if(coun==2)
        return 1;

 }


